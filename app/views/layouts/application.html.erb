<!DOCTYPE html>
<html>
  <head>
    <title>APIcurious</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
    <div class='navbar'>
      <%=link_to image_tag("https://assets-cdn.github.com/images/modules/logos_page/GitHub-Mark.png",:alt=> "Smiley face", :height=> 42, :width=>42), root_path, :class => "propic"%>
        <h3><%= link_to 'Repositories', repositories_path%></3>
        <h3><%= link_to 'Followers', followers_path%></h3>
        <h3><%= link_to 'Following', following_path %></h3>
        <h3><%= link_to "Logout", logout_path, method: :delete %></h3>
        <%=image_tag("#{current_user.avatar_url}",alt: "Smiley face", height: "42", width: "42", :class => "propic")%>

      <%else%>
    <div class='navbar'>
      <h3> <%= link_to 'Login With Github', '/auth/github'%> </h3>
      <%end%>
    </div>
    <%= yield %>
  </body>
</html>
